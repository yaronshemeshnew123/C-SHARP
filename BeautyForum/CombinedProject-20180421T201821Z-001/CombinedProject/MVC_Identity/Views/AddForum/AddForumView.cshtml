@using MVC_Identity.Models

@{
    Layout = null;
}
@model ForumViewModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HomeView</title>
    <div class="row">
        <div class="col-md-4">
            <section>
                <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                    <h4>Use a local account to log in.</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ForumName"></label>
                        <input asp-for="ForumName" class="form-control" />
                        <span asp-validation-for="ForumName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default">Add New Forum</button>
                    </div>
                </form>
            </section>
        </div>
        @*Use another service to log in.*@
    </div>

</head>
<body>
</body>
</html>
